<div class="alert alert-error">
  <strong>It's Simple!</strong> If you think the thing on the left is better, click "Move Up." If not, click "Next" to see the next comparison. Want to add some <strong>thing</strong>? <%= link_to "Click Here!", new_thing_path %>
</div>

<div class="row-fluid">
  <ul class="thumbnails">
    <% collection.each do |thing| %>
      <li class="span6">
        <div class="thumbnail">
          <%= image_tag thing.image.url %>
          <div class="caption clearfix">
            <h3 class="pull-left">
              <span class="badge badge-info">#<%= thing.position %></span>
              <%= link_to thing.name, thing %>
            </h3>
            <h3 class="pull-right">
              <% if thing.position == 1 %>
                <%= link_to "<span class=\"icon icon-trophy\"></span> The Best Thing In The World".html_safe, move_up_thing_path(thing, return_to: request.url), method: "put", class: 'btn btn-primary disabled' %>
              <% else %>
                <%= link_to "<span class=\"icon icon-arrow-up\"></span> Move Up".html_safe, move_up_thing_path(thing, page: (params[:page].to_i + 1).to_s), method: "put", class: 'btn btn-primary' %>
              <% end %>
            </h3>
          </div>
        </div>
      </li>
    <% end %>
    
    <% Thing.where{ position == my{ collection.last.position - 1} }.each do |thing| %>
      <li class="span6">
        <div class="thumbnail">
          <%= image_tag thing.image.url %>
          <div class="caption clearfix">
            <h3 class="pull-left">
              <span class="badge badge-info">#<%= thing.position %></span>
              <%= link_to thing.name, thing %>
            </h3>
            <h3 class="pull-right">
              <% if thing.position == 1 %>
                <%= link_to "<span class=\"icon icon-trophy\"></span> The Best Thing In The World".html_safe, move_up_thing_path(thing, return_to: request.url), method: "put", class: 'btn btn-primary disabled' %>
              <% else %>
                <%= link_to "Next <span class=\"icon icon-arrow-right\"></span> ".html_safe, things_comparision_path(page: (params[:page].to_i + 1).to_s), class: 'btn btn-warning' %>
              <% end %>
            </h3>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<%= will_paginate collection %>