<div class="alert alert-error">
  <strong>It's Simple!</strong> If you think the thing on the left is better, click "Move Up." If not, click "Next" to see the next comparison. Want to add some <strong>thing</strong>? <%= link_to "Click Here!", new_thing_path %>
</div>

<div class="row-fluid">
  <ul class="thumbnails">
    <% collection.each do |thing| %>
      <li class="span6">
        <div class="thumbnail">
          <%= image_tag thing.image.url %>
          <div class="caption clearfix">
            <h3>
              <span class="badge badge-info">#<%= thing.position %></span>
              <%= link_to thing.name, thing %>
            </h3>
          </div>
        </div>
      </li>
    <% end %>
    
    <% Thing.where{ position == my{ collection.last.position - 1} }.each do |thing| %>
      <li class="span6">
        <div class="thumbnail">
          <%= image_tag thing.image.url %>
          <div class="caption clearfix">
            <h3>
              <span class="badge badge-info">#<%= thing.position %></span>
              <%= link_to thing.name, thing %>
            </h3>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<%= will_paginate collection %>