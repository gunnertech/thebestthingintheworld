<% if @thing && !@thing.new_record? %>
  <meta property="fb:app_id" content="239700296176185" />
  <meta property="og:site_name" content="The Best Thing In The World" />
  
  <meta property="og:type"  content="tbtitworld:thing" />
  <meta property="og:url"   content="<%= thing_url(@thing, comparison_thing_id: @comparison_thing.try(:id)) %>" />
  <meta property="og:title" content="<%= @thing.to_s.truncate(30) %>" />
  <meta property="og:image"  content="<%= @thing.image.url %>" />
  
  <%- if @comparison_thing %>
    <meta property="og:description" content="<%= @thing %> is better than <%= @comparison_thing %>" />
  <% else -%>
    <meta property="og:description" content="<%= @thing %> was added to The Best Thing in the World!" />
  <% end -%>
<% end %>